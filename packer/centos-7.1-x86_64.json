{
  "push": {
    "name": "jimmidyson/centos-7.1"
  },
  "builders": [
    {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-7.1/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 102400,
