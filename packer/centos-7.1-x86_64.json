      "iso_url": "{{user `mirror`}}/7.1.1503/isos/x86_64/CentOS-7-x86_64-DVD-1503-01.iso",
      "output_directory": "packer-centos-7.1-x86_64-qemu",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
